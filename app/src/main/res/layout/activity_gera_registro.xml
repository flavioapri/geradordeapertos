<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".GeradorRegistro">

    <EditText
        android:id="@+id/et_formulario_np"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:autofillHints=""
        android:ems="5"
        android:gravity="center"
        android:hint="99.999999/9"
        android:inputType="number"
        android:maxLength="11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/tv_formulario_np"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_formulario_np"
        android:layout_width="27dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/product_sans"
        android:gravity="center_vertical"
        android:text="@string/tv_np"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/et_formulario_np"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_formulario_np" />

    <TextView
        android:id="@+id/tv_formulario_apertadeira"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:fontFamily="@font/product_sans"
        android:gravity="center_vertical"
        android:text="@string/tv_gera_registro_apertadeira"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sp_formulario_apertadeira" />

    <Spinner
        android:id="@+id/sp_formulario_apertadeira"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_formulario_apertadeira"
        app:layout_constraintTop_toBottomOf="@+id/bt_formulario_leitura" />

    <TextView
        android:id="@+id/tv_formulario_programa"
        android:layout_width="87dp"
        android:layout_height="45dp"
        android:fontFamily="@font/product_sans"
        android:gravity="center_vertical"
        android:text="@string/tv_programa"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sp_formulario_programa" />

    <Spinner
        android:id="@+id/sp_formulario_programa"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_formulario_programa"
        app:layout_constraintTop_toBottomOf="@+id/sp_formulario_apertadeira" />

    <TextView
        android:id="@+id/tv_formulario_motivo"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:fontFamily="@font/product_sans"
        android:gravity="center_vertical"
        android:text="@string/tv_motivo"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sp_formulario_motivo" />

    <TextView
        android:id="@+id/tv_formulario_ciclos"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/product_sans"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/bt_formulario_ciclos"
        tools:layout_editor_absoluteX="146dp" />

    <Spinner
        android:id="@+id/sp_formulario_motivo"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_formulario_motivo"
        app:layout_constraintTop_toBottomOf="@+id/tv_formulario_ciclos" />


    <Button
        android:id="@+id/bt_formulario_confirm"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bt_principal"
        android:elevation="8dp"
        android:fontFamily="@font/font_awesome_5"
        android:gravity="center"
        android:onClick="geraRegistro"
        android:stateListAnimator="@null"
        android:text="@string/icon_confirm"
        android:textColor="#FFFFFF"

        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/bt_formulario_clear"
        app:layout_constraintEnd_toStartOf="@+id/bt_formulario_clear"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_formulario_clear"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bt_principal"
        android:elevation="8dp"
        android:fontFamily="@font/font_awesome_5"
        android:gravity="center"
        android:onClick="botaoLimpa"
        android:stateListAnimator="@null"
        android:text="@string/icon_clear"

        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt_formulario_confirm" />

    <Button
        android:id="@+id/bt_formulario_leitura"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bt_texto"
        android:fontFamily="@font/product_sans"
        android:onClick="leCodigo"
        android:text="@string/leitura"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_formulario_np" />

    <Button
        android:id="@+id/bt_formulario_ciclos"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bt_texto"
        android:fontFamily="@font/product_sans"
        android:onClick="selecionaCiclos"
        android:text="@string/tv_ciclo"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_formulario_programa" />

    <TextView
        android:id="@+id/tv_formulario_data"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/product_sans"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_formulario_motivo" />

    <Button
        android:id="@+id/bt_formulario_data"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bt_texto"
        android:fontFamily="@font/product_sans"
        android:onClick="mostrarCalendario"
        android:text="@string/tv_data"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_formulario_data" />

</androidx.constraintlayout.widget.ConstraintLayout>